@model IEnumerable<Pedido>
@{
    ViewData["Title"] = "Copa";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Pedidos para a Copa</h2>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped text-center" style="width:100%">
    <thead>
        <tr>
            <th>
                Nome do Cliente
            </th>
            <th>
                Bebida
            </th>
            <th>
                Quantidade
            </th>
            <th>
                Opções
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            @foreach (var copa in ViewBag.data)
                     {
                        @if (obj.Id_pedido == copa.FK_id_pedido)
                        {
            <tr>
                <td width="15%">
                    @obj.NomeCliente
                </td>
                <td width="15%">
                    @obj.Bebida
                </td>
                <td width="5%">

                    @obj.Quantidade
                </td>
                 <td width="35%">
                 
                            <div class ="w-75 btn-group " role="group" >
                                <a asp-controller="Copa" asp-action="Deletar" asp-route-id="@obj.Id_pedido" class="btn btn-success">
                                    <i class="bi bi-check-lg"></i> &nbsp; Liberar Pedido
                               </a>
                            </div>
                        
                </td>
            </tr>
            }
          }
        }
    </tbody>
</table>

<div class="container p-3">
    <div class ="w-25 btn-group " role="group" >
         <div>
             <a asp-controller="Home" asp-action="Index" asp-area="" class="btn btn-primary">
                 <i class="fas fa-home"></i> &nbsp; Home
                 </a>
         </div>&nbsp;
         <div>
             <a asp-controller="Cozinha" asp-action="Index" asp-area="" class="btn btn-warning">
                 <i class="fas fa-drumstick-bite  "></i> &nbsp; Cozinha
             </a>
        </div>&nbsp;
         <div>
             <a asp-controller="Pedido" asp-action="Index" asp-area="" class="btn btn-danger">
                 <i class="fas fa-list-ul"></i> &nbsp; Pedidos
             </a>
        </div>
    </div>
</div>

