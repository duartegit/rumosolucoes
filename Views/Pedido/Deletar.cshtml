@model Pedido

<form method="post" asp-action="Deletar">
    <input asp-for="Id_pedido" hidden/>
    <div class="border p-3 mt-4">
        <div class="row p-b2">
            <h2 class="text-primary">Deletar Pedido</h2>
            <hr/>
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="NomeCliente">Nome do Cliente</label>
            <input asp-for="NomeCliente" disabled class="form-control" type="text" placeholder="Nome do Cliente"/>
        </div>
        <div class="mb-3">
            <label asp-for="NomePrato">Nome do Prato</label>
            <input asp-for="NomePrato" disabled class="form-control" type="text" placeholder="Nome do Prato"/>
        </div>
        <div class="mb-3">
            <label asp-for="Bebida">Bebida</label>
            <input asp-for="Bebida" disabled class="form-control" type="text" placeholder="Bebida"/>
        </div>
        <div class="mb-3">
            <label asp-for="Quantidade">Quantidade</label>
            <input asp-for="Quantidade" disabled class="form-control" type="text" placeholder="Quantidade de Bebidas"/>
        </div>
        <div class="mb-3">
            <label asp-for="Mesa">Mesa</label>
            <input asp-for="Mesa" disabled class="form-control" type="text" placeholder="Número da Mesa"/>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Deletar</button>
        <a asp-controller="Pedido" asp-action="Index" class="btn btn-primary" style="width:150px">Voltar</a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
